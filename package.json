{
    "name": "central",
    "private": true,
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://tada5hi.net"
    },
    "license": "MIT",
    "version": "1.0.0",
    "description": "This package contains all central packages. It was initially developed as part of my Bachelor Thesis.",
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@commitlint/cli": "^17.4.2",
        "@commitlint/config-angular": "^17.4.2",
        "@commitlint/config-conventional": "^17.4.2",
        "@commitlint/cz-commitlint": "^17.4.2",
        "@swc/cli": "^0.1.59",
        "@swc/core": "^1.3.28",
        "@swc/jest": "^0.2.24",
        "@tada5hi/eslint-config-vue-typescript": "^1.1.1",
        "@types/jest": "^29.2.6",
        "@types/node": "^18.11.18",
        "cross-env": "^7.0.3",
        "eslint": "^8.32.0",
        "husky": "^8.0.3",
        "jest": "^29.4.0",
        "jest-serial-runner": "^1.2.0",
        "lerna": "^6.4.1",
        "rimraf": "^4.1.2",
        "ts-jest": "^29.0.5",
        "typescript": "4.9.4"
    },
    "scripts": {
        "commit": "npx git-cz",
        "clean": "lerna run clean",
        "build": "lerna run build",
        "test": "lerna run test",
        "pub": "lerna publish",
        "lint": "eslint --ext .ts,.vue,.js ./packages/",
        "lint:fix": "npm run lint -- --fix",
        "prepare": "husky install",
        "prepublishOnly": "npm run build",
        "cli": "npm run cli --workspace=packages/api",
        "ui": "npm run dev --workspace=packages/ui",
        "api": "npm run dev --workspace=packages/api",
        "realtime": "npm run dev --workspace=packages/realtime",
        "train-manager": "npm run dev --workspace=packages/train-manager",
        "common": "npm run build-watch --workspace=packages/common"
    },
    "resolutions": {
        "minimatch": "^5.1.6"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "dependencies": {
        "axios": "^1.2.4"
    }
}
