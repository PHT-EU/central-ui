  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.1.0",
    "@swc/core": "^1.3.67",
    "@swc/jest": "^0.2.24",
    "@tada5hi/commitlint-config": "^1.1.0",
    "@tada5hi/eslint-config-vue-typescript": "^1.3.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.2",
