{
    "name": "central",
    "private": true,
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://tada5hi.net"
    },
    "license": "MIT",
    "version": "1.0.0",
    "description": "This package contains all central packages. It was initially developed as part of my Bachelor Thesis.",
    "workspaces": [
        "packages/backend/*",
        "packages/shared/*",
        "packages/frontend/*"
    ],
    "devDependencies": {
        "@commitlint/cli": "^17.1.2",
        "@commitlint/config-angular": "^17.1.0",
        "@commitlint/config-conventional": "^17.1.0",
        "@commitlint/cz-commitlint": "^17.1.2",
        "@tada5hi/eslint-config-vue-typescript": "^1.0.7",
        "@types/node": "^18.8.3",
        "cross-env": "^7.0.3",
        "eslint": "^8.24.0",
        "husky": "^8.0.1",
        "lerna": "^5.6.2",
        "rimraf": "^3.0.2",
        "typescript": "4.8.4"
    },
    "scripts": {
        "commit": "npx git-cz",
        "clean": "lerna run clean",
        "build": "lerna run build",
        "test": "lerna run test",
        "pub": "lerna publish",
        "lint": "eslint --ext .ts,.vue,.js ./packages/",
        "lint:fix": "npm run lint -- --fix",
        "prepare": "husky install",
        "prepublishOnly": "npm run build",
        "cli": "npm run cli --workspace=packages/backend/api",
        "ui": "npm run dev --workspace=packages/frontend/ui",
        "api": "npm run dev --workspace=packages/backend/api",
        "realtime": "npm run dev --workspace=packages/backend/realtime",
        "train-manager": "npm run dev --workspace=packages/backend/train-manager",
        "common": "npm run build-watch --workspace=packages/shared/common",
        "setup": "npm run cli -- setup",
        "upgrade": "npm run cli -- upgrade"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    }
}
