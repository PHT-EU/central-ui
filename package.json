{
    "name": "central",
    "private": true,
    "author": {
        "name": "Peter Placzek",
        "email": "contact@tada5hi.net",
        "url": "https://tada5hi.net"
    },
    "license": "MIT",
    "version": "1.0.0",
    "description": "This package contains all central packages. It was initially developed as part of my Bachelor Thesis.",
    "workspaces": [
        "packages/*"
    ],
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@swc/core": "^1.3.41",
        "@swc/jest": "^0.2.24",
        "@tada5hi/commitlint-config": "^1.0.0",
        "@tada5hi/eslint-config-vue-typescript": "^1.2.5",
        "@types/jest": "^29.5.0",
        "@types/node": "^18.15.3",
        "cross-env": "^7.0.3",
        "eslint": "^8.36.0",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "jest-serial-runner": "^1.2.0",
        "lerna": "^6.4.1",
        "rimraf": "^4.4.0",
        "rollup": "^3.20.1",
        "smob": "^0.1.0",
        "ts-jest": "^29.0.5",
        "typescript": "5.0.2"
    },
    "scripts": {
        "commit": "npx git-cz",
        "clean": "lerna run clean",
        "build": "lerna run build",
        "test": "lerna run test",
        "pub": "lerna publish",
        "lint": "eslint --ext .ts,.vue,.js ./packages/",
        "lint:fix": "npm run lint -- --fix",
        "prepare": "husky install",
        "prepublishOnly": "npm run build",
        "cli": "npm run cli --workspace=packages/api",
        "ui": "npm run dev --workspace=packages/ui",
        "api": "npm run dev --workspace=packages/api",
        "realtime": "npm run dev --workspace=packages/realtime",
        "train-manager": "npm run dev --workspace=packages/train-manager",
        "common": "npm run build-watch --workspace=packages/common"
    },
    "resolutions": {
        "minimatch": "^5.1.6"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    }
}
