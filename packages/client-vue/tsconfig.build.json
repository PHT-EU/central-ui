{
    "extends": "../../tsconfig.build.json",

    "compilerOptions": {
        "outDir": "./dist",
        "lib": [
            "dom",
            "ESNext"
        ],
        "importHelpers": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": false,
        "module": "ESNext",
        "jsx": "preserve",

        "declaration": true,
        "declarationDir": "dist",
        "isolatedModules": true,
        "noEmitOnError": false
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "types/**/*.d.ts",
        "src/**/*.ts"
    ]
}
