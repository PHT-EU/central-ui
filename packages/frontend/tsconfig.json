{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "Node",
        "skipLibCheck": true,
        "lib": [
            "ESNext",
            "ESNext.AsyncIterable",
            "DOM"
        ],
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "strict": true,
        "noEmit": true,
        "baseUrl": ".",
        "rootDir": ".",
        "paths": {
            "@personalhealthtrain/ui-common": ["../common/src"],
            "@/*": [
                "./*"
            ],
            "~/*": [
                "./*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "@types/node",
            "@nuxt/types",
            "vue-router/types"
        ]
    },
    "references": [
        {
            "path": "../common"
        }
    ]
}

