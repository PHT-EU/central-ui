{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "paths": {
            "@personalhealthtrain/ui-common": [
                "./packages/common/src"
            ],
            "@/*": [
                "./packages/frontend/*"
            ],
            "~/*": [
                "./packages/frontend/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "@types/node",
            "@nuxt/types",
            "vue-router/types"
        ]
    },
    "exclude": ["node_modules"]
}

