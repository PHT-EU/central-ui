{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "rootDir": ".",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "paths": {
            "@personalhealthtrain/ui-common": ["./packages/common/src"],
            "@/*": [
                "./packages/frontend/*"
            ],
            "~/*": [
                "./packages/frontend/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "@types/node",
            "@nuxt/types",
            "vue-router/types"
        ]
    }
}

